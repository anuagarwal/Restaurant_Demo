<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/restaurantLogoIv"
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:src="@drawable/rsz_no_image"
                    android:layout_weight="1.5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/restaurantNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PizzaRoma"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/numberCouponsTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 offers" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/restaurantFavIv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:layout_weight="0.25"
                    android:src="@drawable/favourite" />
            </LinearLayout>

            <TextView
                android:id="@+id/categoriesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headerLayout"
                android:padding="5dp"
                android:text="Pizzeria"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/distanceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoriesTv"
                android:padding="5dp"
                android:text="250m Andheri West"
                android:drawableLeft="@drawable/rsz_location"
                android:textSize="14sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>